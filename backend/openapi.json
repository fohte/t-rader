{
  "openapi": "3.1.0",
  "info": {
    "title": "T-Rader API",
    "description": "日本株投資プラットフォーム T-Rader の API",
    "license": {
      "name": ""
    },
    "version": "0.1.0"
  },
  "paths": {
    "/api/health": {
      "get": {
        "tags": [
          "health"
        ],
        "summary": "ヘルスチェック",
        "operationId": "health_check",
        "responses": {
          "200": {
            "description": "サービス正常",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HealthResponse"
                }
              }
            }
          },
          "500": {
            "description": "内部サーバーエラー",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/watchlists": {
      "get": {
        "tags": [
          "watchlists"
        ],
        "summary": "ウォッチリスト一覧を取得する",
        "operationId": "list_watchlists",
        "responses": {
          "200": {
            "description": "ウォッチリスト一覧",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Watchlist"
                  }
                }
              }
            }
          },
          "500": {
            "description": "内部サーバーエラー",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "watchlists"
        ],
        "summary": "ウォッチリストを作成する",
        "operationId": "create_watchlist",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateWatchlistRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "ウォッチリストを作成した",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Watchlist"
                }
              }
            }
          },
          "400": {
            "description": "バリデーションエラー",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "422": {
            "description": "リクエストボディのパースに失敗",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "内部サーバーエラー",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/watchlists/{id}": {
      "delete": {
        "tags": [
          "watchlists"
        ],
        "summary": "ウォッチリストを削除する",
        "operationId": "delete_watchlist",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ウォッチリスト ID",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "削除成功"
          },
          "400": {
            "description": "パスパラメータが不正",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "ウォッチリストが見つからない",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "内部サーバーエラー",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/watchlists/{id}/items": {
      "get": {
        "tags": [
          "watchlist_items"
        ],
        "summary": "ウォッチリスト内の銘柄一覧を取得する",
        "operationId": "list_watchlist_items",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ウォッチリスト ID",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "銘柄一覧",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/WatchlistItem"
                  }
                }
              }
            }
          },
          "400": {
            "description": "パスパラメータが不正",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "ウォッチリストが見つからない",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "内部サーバーエラー",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "watchlist_items"
        ],
        "summary": "ウォッチリストに銘柄を追加する",
        "operationId": "add_watchlist_item",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ウォッチリスト ID",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AddWatchlistItemRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "銘柄を追加した",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WatchlistItem"
                }
              }
            }
          },
          "400": {
            "description": "バリデーションエラー",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "ウォッチリストが見つからない",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "422": {
            "description": "リクエストボディのパースに失敗",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "内部サーバーエラー",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/watchlists/{id}/items/{instrument_id}": {
      "delete": {
        "tags": [
          "watchlist_items"
        ],
        "summary": "ウォッチリストから銘柄を削除する",
        "operationId": "delete_watchlist_item",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ウォッチリスト ID",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "instrument_id",
            "in": "path",
            "description": "銘柄コード",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "削除成功"
          },
          "400": {
            "description": "パスパラメータが不正",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "404": {
            "description": "銘柄が見つからない",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "内部サーバーエラー",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AddWatchlistItemRequest": {
        "type": "object",
        "required": [
          "instrument_id",
          "name"
        ],
        "properties": {
          "instrument_id": {
            "type": "string",
            "description": "銘柄コード (例: \"7203\")",
            "minLength": 1,
            "pattern": "\\S"
          },
          "name": {
            "type": "string",
            "description": "銘柄名 (例: \"トヨタ自動車\")",
            "minLength": 1,
            "pattern": "\\S"
          }
        }
      },
      "CreateWatchlistRequest": {
        "type": "object",
        "required": [
          "name"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "ウォッチリスト名",
            "minLength": 1,
            "pattern": "\\S"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "description": "API エラーレスポンスの JSON 構造",
        "required": [
          "error"
        ],
        "properties": {
          "error": {
            "type": "string",
            "description": "エラーメッセージ"
          }
        }
      },
      "HealthResponse": {
        "type": "object",
        "description": "ヘルスチェックレスポンス",
        "required": [
          "status"
        ],
        "properties": {
          "status": {
            "type": "string",
            "description": "サービスの状態"
          }
        }
      },
      "Watchlist": {
        "type": "object",
        "required": [
          "id",
          "name",
          "sort_order",
          "created_at"
        ],
        "properties": {
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string"
          },
          "sort_order": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "WatchlistItem": {
        "type": "object",
        "required": [
          "watchlist_id",
          "instrument_id",
          "sort_order",
          "added_at"
        ],
        "properties": {
          "added_at": {
            "type": "string",
            "format": "date-time"
          },
          "instrument_id": {
            "type": "string"
          },
          "sort_order": {
            "type": "integer",
            "format": "int32"
          },
          "watchlist_id": {
            "type": "string",
            "format": "uuid"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "health",
      "description": "ヘルスチェック"
    },
    {
      "name": "watchlists",
      "description": "ウォッチリスト管理"
    },
    {
      "name": "watchlist_items",
      "description": "ウォッチリスト内の銘柄管理"
    }
  ]
}
